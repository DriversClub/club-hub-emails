{
	"compilerOptions": {
		"pretty": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"target": "es6",
		"outDir": "./dist",
		"declaration": true,
		"lib": [
			"dom",
			"es6",
			"esnext.asynciterable",
			"es2015"
		],
		"baseUrl": "./",
		"paths": {
			"@clubhub/*": ["./"]
		}
	},
	"exclude": [
		"node_modules",
		".vscode",
		".git",
		"**/*.spec.ts",
        "dist",
		"tests",
		"src/clubs"
	],
	"include": [
		"./",
		// "tests/"
	]
}